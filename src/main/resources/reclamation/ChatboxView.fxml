<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.reclamation.ChatboxController">
    <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="200" prefWidth="300" />
    <HBox spacing="10">
        <TextField fx:id="messageField" promptText="Type your message..." HBox.hgrow="ALWAYS" />
        <Button text="Send" onAction="#handleSendMessage" />
    </HBox>
</VBox>
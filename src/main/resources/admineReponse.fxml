<AnchorPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:id="reponseWindow" fx:controller="controllers.AdminReponseController" prefWidth="900.0" prefHeight="650.0" stylesheets="@styles.css">
    <!-- Link to the CSS file -->

    <children>
        <!-- StackPane to center all content within the window -->
        <StackPane>
            <!-- VBox for vertical layout -->
            <VBox spacing="25.0" layoutX="20.0" layoutY="20.0" prefWidth="840.0" prefHeight="600.0">
                <!-- Title Section -->
                <HBox alignment="center" spacing="10.0" style="-fx-background-color: #008080; -fx-background-radius: 20px;">
                    <children>
                        <Label text="Gestion des RÃ©ponses">
                            <font>
                                <Font size="22.0" />
                            </font>
                            <textFill>
                                <javafx.scene.paint.Color fx:value="white" />
                            </textFill>
                        </Label>
                    </children>
                </HBox>

                <!-- ListView for responses -->
                <ListView fx:id="reponseListView" prefHeight="400.0" prefWidth="840.0" style="-fx-background-color: #f4f4f4; -fx-border-radius: 10px; -fx-padding: 10px;"/>

                <!-- HBox for buttons with spacing and centered alignment -->
                <HBox spacing="30.0" alignment="center">
                    <Button fx:id="btnAddResponse" text="Ajouter" onAction="#addResponse" prefWidth="250.0" styleClass="action-button"/>
                    <Button fx:id="btnModifyResponse" text="Modifier" onAction="#modifyResponse" prefWidth="250.0" styleClass="action-button"/>
                    <Button fx:id="btnDeleteResponse" text="Supprimer" onAction="#deleteResponse" prefWidth="250.0" styleClass="action-button"/>
                </HBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>

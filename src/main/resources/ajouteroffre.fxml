<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ajouteroffrec">

    <Label text="Ajouter une Offre" layoutX="50" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Montant :" layoutX="50" layoutY="60"/>
    <TextField fx:id="txtMontant" layoutX="150" layoutY="60" prefWidth="300"/>

    <Label text="Conditions :" layoutX="50" layoutY="100"/>
    <TextArea fx:id="txtConditions" layoutX="150" layoutY="100" prefWidth="300" prefHeight="60"/>

    <Label text="Contact :" layoutX="50" layoutY="180"/>
    <TextField fx:id="txtContact" layoutX="150" layoutY="180" prefWidth="300"/>

    <Label text="Date :" layoutX="50" layoutY="220"/>
    <Label fx:id="lblDate" layoutX="150" layoutY="220" style="-fx-font-weight: bold;"/>

    <Button text="Ajouter" layoutX="150" layoutY="280" onAction="#ajouterOffre"/>
    <Button text="Annuler" layoutX="300" layoutY="280" onAction="#fermerFenetre"/>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fx:id="scrollPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PubliciteController">
    <VBox spacing="10" style="-fx-padding: 20;" stylesheets="@styles.css">
        <!-- Header with title and buttons -->
        <HBox spacing="10" style="-fx-alignment: center-left;">
            <Label text="Liste des Publicités" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Button fx:id="ajouterPubliciteButton" text="Ajouter Publicité" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
        </HBox>

        <!-- VBox to hold dynamic content for publicites -->
        <VBox fx:id="publicitesContainer" spacing="10" style="-fx-padding: 10;">
            <!-- Dynamic content will be added here by the controller -->
        </VBox>
    </VBox>
</ScrollPane>

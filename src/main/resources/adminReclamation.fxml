<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="adminReclamationPane" prefHeight="600.0" prefWidth="976.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminReclamationController" stylesheets="@styles.css">
    <children>
        <!-- Title Section -->
        <Pane layoutX="573.0" layoutY="16.0" prefHeight="94.0" prefWidth="394.0" style="-fx-background-radius: 20 20 0 0; -fx-background-color: linear-gradient(to right, #008080, #00bfae);">
            <children>
                <Label layoutX="75.0" layoutY="27.0" text="Gestion des Réclamations" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Reclamation List -->
        <ListView fx:id="reclamationListView" layoutX="50.0" layoutY="100.0" prefHeight="300.0" prefWidth="876.0" style="-fx-background-color: #f0f0f0; -fx-border-radius: 10px;" />

        <!-- Buttons for Actions -->
        <Button fx:id="btnSupprimer" layoutX="50.0" layoutY="420.0" onAction="#supprimerReclamation" text="Supprimer" />
        <Button fx:id="btnModifier" layoutX="200.0" layoutY="420.0" onAction="#remplirModifierform" text="Modifier" />
        <Button fx:id="btnVoirReponses" layoutX="350.0" layoutY="420.0" onAction="#ouvrirReponses" text="Voir Réponses" />
        <Button fx:id="btnAjouter" layoutX="500.0" layoutY="420.0" onAction="#ajouterReclamation" text="Ajouter" />

        <!-- Form for Adding New Reclamation -->
        <Pane layoutX="50.0" layoutY="460.0" prefHeight="250.0" prefWidth="876.0" style="-fx-background-color: rgba(0, 191, 174, 0.1); -fx-border-radius: 10px; -fx-padding: 10px;">
            <children>
                <Label layoutX="10.0" layoutY="10.0" text="Type:" />
                <TextField fx:id="typeTextField" layoutX="120.0" layoutY="10.0" prefWidth="250.0" />

                <Label layoutX="10.0" layoutY="50.0" text="Description:" />
                <TextField fx:id="descriptionTextField" layoutX="120.0" layoutY="50.0" prefWidth="250.0" />

                <Label layoutX="10.0" layoutY="90.0" text="Objet:" />
                <TextField fx:id="objetTextField" layoutX="120.0" layoutY="90.0" prefWidth="250.0" />

                <Label layoutX="10.0" layoutY="130.0" text="Etat:" />
                <TextField fx:id="etatTextField" layoutX="120.0" layoutY="130.0" prefWidth="250.0" />
            </children>
        </Pane>
    </children>
</AnchorPane>

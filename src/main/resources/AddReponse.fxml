<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:id="addResponseWindow" fx:controller="controllers.AddResponseController" prefWidth="400.0" prefHeight="350.0" stylesheets="@styles.css">
    <children>
        <VBox spacing="20.0" layoutX="20.0" layoutY="20.0" prefWidth="360.0" prefHeight="310.0">
            <!-- Title Label -->
            <Label text="Ajouter une réponse" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Text Area for Response Content -->
            <TextArea fx:id="responseContentTextArea" promptText="Entrez votre réponse..." wrapText="true" prefHeight="100.0"/>

            <!-- Image Selection Section -->
            <HBox spacing="20.0">
                <Button fx:id="selectImageButton" text="Sélectionner une image (Optionnel)" onAction="#onSelectImage" prefWidth="200.0"/>
                <Label fx:id="imagePathLabel" text="Aucune image sélectionnée" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
            </HBox>

            <!-- Type Input (TextField) -->
            <HBox spacing="20.0">
                <Label text="Type:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="typeTextField" promptText="Entrez le type (Information, Complaint, etc.)" prefWidth="200.0"/>
            </HBox>

            <!-- Priority Input (TextField) -->
            <HBox spacing="20.0">
                <Label text="Priorité :" style="-fx-font-size: 14px;"/>
                <TextField fx:id="priorityTextField" promptText="Entrez la priorité" prefWidth="200.0"/>
            </HBox>

            <!-- Action Buttons (Add/Cancel) -->
            <HBox spacing="20.0" alignment="center">
                <Button text="Ajouter" onAction="#onAddResponse" prefWidth="120.0"/>
                <Button text="Annuler" onAction="#onCancel" prefWidth="120.0"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.publicite.ModifyPubliciteController">
    <Label text="Modifier une Publicité" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="ID Publicité:" />
    <TextField fx:id="idField" editable="false"/>

    <Label text="Titre:" />
    <TextField fx:id="titreField" />

    <Label text="Description:" />
    <TextField fx:id="descriptionField" />

    <Label text="Media URL:" />
    <TextField fx:id="mediaUrlField" />

    <Label text="Date:" />
    <TextField fx:id="dateField" />

    <Label text="Statut:" />
    <TextField fx:id="statutField" />

    <Button text="Modifier" onAction="#handleModifyPublicite" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
</VBox>

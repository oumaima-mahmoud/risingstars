<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #0F5CAF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.consommation.RechercherPanier">
    <children>
        <!-- Champ de recherche -->
        <TextField fx:id="searchField" layoutX="144.0" layoutY="50.0" prefWidth="200.0" promptText="Recherche..." />

        <!-- Bouton de recherche -->
        <Button layoutX="360.0" layoutY="50.0" mnemonicParsing="false" onAction="#rechercher" prefHeight="26.0" prefWidth="75.0" style="-fx-background-color: #208A39; -fx-text-fill: black;" text="Rechercher" />

        <!-- TableView -->
        <TableView fx:id="tableview" layoutX="144.0" layoutY="108.0" prefHeight="200.0" prefWidth="382.0">
            <columns>
                <TableColumn fx:id="dateCreation" prefWidth="75.0" style="-fx-text-fill: black;" text="Date de création" />
                <TableColumn fx:id="total" prefWidth="75.0" style="-fx-text-fill: black;" text="Total" />
                <TableColumn fx:id="etat" prefWidth="75.0" style="-fx-text-fill: black;" text="État" />
                <TableColumn fx:id="idproduit" prefWidth="75.0" style="-fx-text-fill: black;" text="idproduit" />
                <TableColumn fx:id="id_user" prefWidth="75.0" style="-fx-text-fill: black;" text="idUser" />
            </columns>
        </TableView>
    </children>
</AnchorPane>

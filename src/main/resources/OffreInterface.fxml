<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fx:id="scrollPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OffreController">
    <VBox spacing="10" style="-fx-padding: 20;" stylesheets="@styles.css">
        <HBox spacing="10" style="-fx-alignment: center-left;">
            <Label text="Liste des Offres" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Button fx:id="ajouterOffreButton" text="Ajouter Offre" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
            <Button fx:id="refreshOffresButton" text="Refresh" style="-fx-background-color: #ffc107; -fx-text-fill: white;" />
        </HBox>

        <VBox fx:id="offresContainer" spacing="10" style="-fx-padding: 10;">
            <!-- Dynamic content will be added here -->
        </VBox>
    </VBox>
</ScrollPane>

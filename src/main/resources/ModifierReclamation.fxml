<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="modifierReclamationPane" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ModifierReclamationController" stylesheets="@styles.css">

    <!-- Link to the CSS file -->
    <children>
        <!-- Title Section -->
        <Pane layoutX="50.0" layoutY="20.0" prefHeight="50.0" prefWidth="700.0" style="-fx-background-radius: 20 20 0 0; -fx-background-color: linear-gradient(to right, #008080, #00bfae);">
            <children>
                <Label layoutX="180.0" layoutY="15.0" text="Modifier la RÃ©clamation" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Fields for Reclamation Details -->
        <Label layoutX="50.0" layoutY="100.0" text="Type: " />
        <TextField fx:id="typeField" layoutX="150.0" layoutY="100.0" prefWidth="600.0" />

        <Label layoutX="50.0" layoutY="150.0" text="Description: " />
        <TextField fx:id="descriptionField" layoutX="150.0" layoutY="150.0" prefWidth="600.0" />

        <Label layoutX="50.0" layoutY="200.0" text="Objet: " />
        <TextField fx:id="objetField" layoutX="150.0" layoutY="200.0" prefWidth="600.0" />

        <Label layoutX="50.0" layoutY="250.0" text="Etat: " />
        <TextField fx:id="etatField" layoutX="150.0" layoutY="250.0" prefWidth="600.0" />

        <Label layoutX="50.0" layoutY="300.0" text="Date: " />
        <!-- Date field is now read-only, not editable -->
        <TextField fx:id="dateReclamationField" layoutX="150.0" layoutY="300.0" prefWidth="600.0" editable="false"/>

        <!-- Buttons for submitting or canceling -->
        <Button fx:id="btnSave" layoutX="150.0" layoutY="400.0" text="Enregistrer" onAction="#modifierReclamation" />
        <Button fx:id="btnCancel" layoutX="350.0" layoutY="400.0" text="Annuler" onAction="#cancelChanges" />
    </children>
</AnchorPane>

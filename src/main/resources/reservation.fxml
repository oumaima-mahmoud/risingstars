<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.*?>
        <?import java.lang.String?>
        <?import javafx.geometry.Insets?>

 <?import javafx.collections.FXCollections?>
 <AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
<children>
    <!-- Titre -->
    <Label layoutX="14.0" layoutY="14.0" text="Réservation de Ticket" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <!-- Type d'événement -->
    <Label layoutX="14.0" layoutY="64.0" text="Type d'événement:" />
    <ComboBox fx:id="typeEvenement" layoutX="150.0" layoutY="60.0" prefWidth="200">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Concert" />
                <String fx:value="Conférence" />
                <String fx:value="Sport" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Date de l'événement -->
    <Label layoutX="14.0" layoutY="114.0" text="Date de l'événement:" />
    <DatePicker fx:id="dateEvenement" layoutX="150.0" layoutY="110.0" prefWidth="200" />

    <!-- Avez-vous une voiture ? -->
    <Label layoutX="14.0" layoutY="164.0" text="Avez-vous une voiture ?" />
    <HBox layoutX="150.0" layoutY="160.0" spacing="10">
        <RadioButton fx:id="ouiVoiture" text="Oui" />
        <RadioButton fx:id="nonVoiture" text="Non" />
    </HBox>

    <!-- Bouton Suivant -->
    <Button fx:id="suivantButton" layoutX="150.0" layoutY="210.0" text="Suivant" onAction="#passerEtapeSuivante" />
</children>
</AnchorPane>